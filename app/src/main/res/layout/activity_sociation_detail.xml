<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.manba.ui.ActionTitleView
        android:id="@id/atv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"></com.android.manba.ui.ActionTitleView>

    <RelativeLayout
        android:id="@+id/rl_gonghui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/atv_title"
        android:paddingBottom="@dimen/home_to_topside">

        <ImageView
            android:id="@+id/iv_gonghui_pic"
            android:layout_width="@dimen/gonghui_icon_width"
            android:layout_height="@dimen/gonghui_icon_width"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_gonghui_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_gonghui_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/common_to_side"
            android:text="漫吧开心公会"
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_textsize" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_gonghui_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/common_to_side"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_gonghui_member_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_to_side"
                android:text="成员数：1200"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/small_textsize" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_gonghui_hot_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_to_side"
                android:text="活跃度：100"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/small_textsize" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_gonghui_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_gonghui"
        android:background="@android:color/background_light"
        android:padding="@dimen/common_to_side"
        android:text="@string/test_more" />

    <RadioGroup
        android:id="@+id/ll_dongtai_chengyuan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_gonghui_desc"
        android:layout_marginTop="@dimen/common_to_top"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/common_text_side"
            android:text="@string/gonghui_dongtai"
            android:textColor="@color/bottom_text_color" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/common_text_side"
            android:text="@string/gonghui_chengyuan"
            android:textColor="@color/bottom_text_color" />
    </RadioGroup>

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_height"
        android:layout_below="@id/ll_dongtai_chengyuan"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/fl_gonghui_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"></FrameLayout>

    <TextView
        android:id="@+id/tv_join"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common_to_side"
        android:layout_marginLeft="@dimen/common_to_side"
        android:layout_marginRight="@dimen/common_to_side"
        android:background="@drawable/shape_borderline_bluefull"
        android:gravity="center"
        android:text="@string/gonghui_shenqingjiaru"
        android:textColor="@android:color/white" />

</RelativeLayout>