<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/common_to_top">

    <ImageView
        android:id="@+id/iv_wallet_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/me_icon_lingshi"/>

    <TextView
        android:id="@+id/tv_wallet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_wallet_type"
        android:layout_marginLeft="@dimen/common_to_side"
        android:text="灵石"
        android:textSize="@dimen/common_textsize" />

    <TextView
        android:id="@+id/tv_wallet_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="10000"
        android:textSize="@dimen/common_textsize" />

</RelativeLayout>