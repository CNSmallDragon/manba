<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/home_to_side"
    android:layout_marginRight="@dimen/home_to_side"
    android:layout_marginTop="@dimen/login_num_side"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_user_pic"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_width"
            android:src="@drawable/login_icon_qq" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_user_pic"
            android:layout_marginLeft="@dimen/home_to_side"
            android:layout_toRightOf="@+id/iv_user_pic"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/iv_user_pic"
            android:layout_marginLeft="@dimen/home_to_side"
            android:layout_toRightOf="@id/iv_user_pic"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_pub_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_homename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/home_to_side"
                android:background="@drawable/shape_borderline_grey_homename"
                android:text="@string/regist_lingyu"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- <TextView
            android:id="@+id/tv_pub_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_user_pic"
            android:layout_marginLeft="@dimen/home_to_side"
            android:layout_toRightOf="@id/iv_user_pic"
            android:text="@string/app_name"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_homename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_user_pic"
            android:layout_marginLeft="@dimen/home_to_side"
            android:layout_toRightOf="@id/tv_pub_time"
            android:background="@drawable/shape_borderline_grey_homename"
            android:text="@string/app_name"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" /> -->

        <TextView
            android:id="@+id/tv_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_borderline_grey_guanzhu"
            android:drawableLeft="@drawable/home_icon_guanzhu"
            android:drawablePadding="2dp"
            android:text="@string/home_guanzhu"
            android:textColor="#2894FF"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_content_pic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_num_side"
        android:background="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_content_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_num_side"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/test_more" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_num_side"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_content_fenxiang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_icon_zf" />

            <TextView
                android:id="@+id/tv_content_fenxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/home_to_side"
                android:text="20"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content_zan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_content_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/select_home_zan" />

            <TextView
                android:id="@+id/tv_content_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/home_to_side"
                android:text="168"
                android:textColor="@color/content_zan_color"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content_pinglun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_icon_pinglun" />

            <TextView
                android:id="@+id/tv_content_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/home_to_side"
                android:text="20"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>