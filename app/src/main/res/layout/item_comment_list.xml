<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="CommentItemBean"
            type="com.minyou.manba.network.resultModel.CommentListResultModel.ResultBean.CommentItemBean"/>

        <import type="com.minyou.manba.util.DateFormatUtil"/>
        <import type="java.lang.String"/>
        <import type="android.view.View"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/common_line_color" />

        <RelativeLayout
            android:id="@+id/bottom_lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_to_side"
            android:paddingRight="@dimen/common_to_side"
            android:paddingTop="@dimen/common_to_side">

            <TextView
                android:id="@+id/list_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dongtai_common_left"
                android:text="@{CommentItemBean.nickName}"
                android:textSize="@dimen/common_textsize"
                android:layout_alignParentTop="true"/>

            <!--  放会员等级  -->
            <ImageView
                android:id="@+id/list_sex_image"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="@dimen/common_to_side"
                android:layout_toRightOf="@+id/list_name_text"/>

            <TextView
                android:id="@+id/list_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{DateFormatUtil.format(CommentItemBean.commentTime)}"
                android:textSize="@dimen/small_textsize"
                android:layout_alignBaseline="@+id/list_address_text"
                android:layout_alignBottom="@+id/list_address_text"
                android:layout_alignStart="@+id/list_name_text" />

            <TextView
                android:id="@+id/list_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_name_text"
                android:layout_marginLeft="@dimen/common_to_side"
                android:layout_marginTop="@dimen/common_text_side"
                android:layout_toRightOf="@+id/list_date_text"
                android:text="昌平区温度水城"
                android:visibility="invisible"
                android:textSize="@dimen/small_textsize" />

            <TextView
                android:id="@+id/tv_floor_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@{String.format(@string/comment_floor,CommentItemBean.commentId)}"
                android:textSize="@dimen/small_textsize"/>

            <TextView
                android:id="@+id/list_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="@dimen/dongtai_common_left"
                android:text="@{CommentItemBean.content}"
                android:textSize="@dimen/common_textsize"
                android:layout_below="@+id/list_date_text" />

            <RelativeLayout
                android:id="@+id/reply_relay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/dongtai_common_left"
                android:background="@color/whitesmoke"
                android:visibility="@{CommentItemBean.parentId > 0 ? View.VISIBLE : View.GONE}"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_below="@+id/list_info_text"
                android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/reply_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="你好啊！你好啊！你好啊！你好啊！你好啊！你好啊！你好啊！你好啊！你好啊！你好啊！" />

                <TextView
                    android:id="@+id/reply_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="             " />

                <TextView
                    android:id="@+id/reply_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reply_text1"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="2dp"
                    android:text="你好啊！你好啊！你好啊！你好啊！你好啊！你好啊！你好啊！你好啊！你好啊！你好啊！" />

                <TextView
                    android:id="@+id/reply_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reply_text1"
                    android:layout_marginTop="8dp"
                    android:text="             " />

                <TextView
                    android:id="@+id/reply_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reply_text2"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="2dp"
                    android:text="你好啊！你好啊！你好啊！你好啊！你好啊！你好啊！你好啊！你好啊！你好啊！你好啊！" />

                <TextView
                    android:id="@+id/reply_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reply_text2"
                    android:layout_marginTop="8dp"
                    android:text="             " />

                <TextView
                    android:id="@+id/more_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/reply_text3"
                    android:layout_marginTop="@dimen/common_to_side"
                    android:text="更多1000条回复"
                    android:textColor="@color/blue"></TextView>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/reply_relay" />

            <ImageView
                android:id="@+id/list_head_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>

    </LinearLayout>
</layout>