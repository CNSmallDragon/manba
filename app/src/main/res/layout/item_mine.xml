<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/mine_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true">

    <ImageView
        android:id="@+id/iv_my_qianbao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/me_icon_qianbao" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/login_num_side"
        android:src="@drawable/me_icon_go" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_my_qianbao"
        android:text="@string/my_qianbao"
        android:textSize="@dimen/common_textsize" />
</RelativeLayout>
