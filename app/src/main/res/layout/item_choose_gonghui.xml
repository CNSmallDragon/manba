<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dimgrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/common_to_side">

        <ImageView
            android:id="@+id/iv_gonghui_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avater_default" />

        <TextView
            android:id="@+id/tv_gonghui_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/cb_check"
            android:layout_width="@dimen/setting_switch_width"
            android:layout_height="@dimen/setting_switch_height"
            android:layout_marginRight="20dp"
            android:button="@null"
            android:background="@drawable/select_switch"/>

    </LinearLayout>

</LinearLayout>