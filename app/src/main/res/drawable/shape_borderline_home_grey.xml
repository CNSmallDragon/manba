<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 背景颜色 -->
      <solid android:color="#00ffffff" />

    <!-- 设置边框 -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

    <!-- 边界线颜色和大小 -->
    <stroke
        android:width="1dp"
        android:color="#50969696" />

    <!-- 圆角大小 -->
    <corners android:radius="999dp" />

</shape>